<div id="<%= dom_id product %>">
  <p>
    <strong>Name:</strong>
    <%= product.name %>
  </p>

  <p>
    <strong>Brand:</strong>
    <%= product.brand %>
  </p>

  <p>
    <strong>Size:</strong>
    <%= product.size %>
  </p>

  <p>
    <strong>Categories:</strong>
    <%= product.categories %>
  </p>

  <p>
    <strong>Ingredients:</strong>
    <%= product.ingredients %>
  </p>

  <p>
    <strong>Upc:</strong>
    <%= product.upc %>
  </p>
  
  <%= image_tag(product.image) %>
</div>
