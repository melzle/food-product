<div class="container">
  <p style="color: green"><%= notice %></p>
  <h3>Product Detail</h3>
  <br>
  <div class="row">
    <div class="col-4">
      <%= image_tag(@product.image, class: "image") %>
    </div>
    <div class="col-8">
      <div class="row mb-3">
        <label class="col-3">Name:</label>
        <div class="col-9">
          <%= @product.name %>
        </div>
      </div>
      <div class="row mb-3">
        <label class="col-3">Brand:</label>
        <div class="col-9">
          <%= @product.brand %>
        </div>
      </div>
      <div class="row mb-3">
        <label class="col-3">Size:</label>
        <div class="col-9">
          <%= @product.size %>
        </div>
      </div>
      <div class="row mb-3">
        <label class="col-3">Categories:</label>
        <div class="col-9">
          <%= @product.categories %>
        </div>
      </div>
      <div class="row mb-3">
        <label class="col-3">Ingredients:</label>
        <div class="col-9">
          <%= @product.ingredients %>
        </div>
      </div>
      <div class="row mb-3">
        <label class="col-3">UPC:</label>
        <div class="col-9">
          <%= @product.upc %>
        </div>
      </div>
    </div>
  </div>

  <br>

  <div class="d-flex flex-row-reverse gap-4 mt-2">
    <%= button_to "Delete", @product, method: :delete,  data: { confirm: 'Are you sure?' }, class: "btn btn-danger"  %>
    <%= link_to "Edit", edit_product_path(@product), class: "btn btn-primary" %> 
    <%= link_to "Back", products_path, class: "btn btn-outline-primary" %>
  </div>
</div>
